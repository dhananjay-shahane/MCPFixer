modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "pkg-config", "qhull", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MCP Data Analysis System"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Ollama Service"

[[workflows.workflow]]
name = "MCP Data Analysis System"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install fastmcp pandas matplotlib numpy requests flask psutil && python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Ollama Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "OLLAMA_HOST=0.0.0.0:11434 ~/.ollama/ollama serve"
waitForPort = 11434

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 11434
externalPort = 3000
